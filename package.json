{
	"name": "richtext-extension",
	"author": "Tetsuaki Hamano",
	"license": "GPL-2.0+",
	"scripts": {
		"wp-env": "wp-env",
		"open": "wp-env start && opener http://localhost:8888",
		"stop": "wp-env stop",
		"watch:sass": "sass src/style-option.scss:build/style-option.css --watch",
		"watch:js": "wp-scripts start",
		"build:sass": "sass src/style-option.scss:build/style-option.css --no-source-map --style compressed",
		"build:js": "wp-scripts build",
		"build": "npm run clean && npm run build:js && npm run build:sass",
		"clean": "rimraf build",
		"lint": "npm run lint:php && npm run lint:js && npm run lint:style",
		"lint:php": "composer lint",
		"lint:js": "wp-scripts lint-js",
		"lint:style": "wp-scripts lint-style",
		"stylelint": "stylelint --fix"
	},
	"devDependencies": {
		"@wordpress/env": "^4.1.3",
		"@wordpress/icons": "^6.1.1",
		"@wordpress/scripts": "^19.2.2",
		"npm-run-all": "^4.1.5",
		"opener": "^1.5.2",
		"rimraf": "^3.0.2",
		"stylelint": "^13.13.1",
		"stylelint-config-recess-order": "^3.0.0",
		"stylelint-order": "^5.0.0"
	},
	"dependencies": {}
}
