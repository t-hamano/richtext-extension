{
	"name": "richtext-extension",
	"author": "Tetsuaki Hamano",
	"license": "GPL-2.0+",
	"scripts": {
		"wp-env": "wp-env",
		"open": "wp-env start && opener http://localhost:8888",
		"stop": "wp-env stop",
		"start": "wp-scripts start src/format --output-path=build/js",
		"build": "npm-run-all build:*",
		"build:clean": "rimraf build/js build/css languages/npm_package_name-ja-npm_package_name-editor.json",
		"build:js": "wp-scripts build src/format --output-path=build/js",
		"build:css": "node-sass src/sass/ --output build/css/",
		"clean": "rimraf build",
		"lint:php": "composer lint",
		"lint:js": "wp-scripts lint-js",
		"lint:style": "wp-scripts lint-style"
	},
	"devDependencies": {
		"@wordpress/env": "^4.1.0",
		"@wordpress/icons": "^5.0.0",
		"@wordpress/scripts": "^17.1.0",
		"eslint-config-wordpress": "^2.0.0",
		"node-sass": "^6.0.1",
		"npm-run-all": "^4.1.5",
		"opener": "^1.5.2",
		"rimraf": "^3.0.2",
		"stylelint-config-rational-order": "^0.1.2"
	},
	"dependencies": {}
}
